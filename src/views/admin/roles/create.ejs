<h3 class="mb-3">Create Role</h3>
<form method="post" action="/admin/roles" class="row g-3">
  <div class="col-md-6"><label class="form-label">Name</label><input name="name" class="form-control" required></div>
  <div class="col-12">
    <label class="form-label">Permissions</label>
    <div class="row row-cols-2">
      <% perms.forEach(p => { %>
        <div class="col"><div class="form-check">
          <input class="form-check-input" type="checkbox" name="permissions" value="<%= p.id %>" id="p<%= p.id %>">
          <label class="form-check-label" for="p<%= p.id %>"><%= p.name %></label>
        </div></div>
      <% }) %>
    </div>
  </div>
  <div class="col-12"><button class="btn btn-primary">Save</button></div>
</form>
