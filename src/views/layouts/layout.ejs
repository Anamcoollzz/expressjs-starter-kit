<!DOCTYPE html>
<html lang="<%= typeof lang !== 'undefined' ? lang : 'en' %>">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>
    <%= (typeof t==='function' ? t('app.title') : (title || 'Admin' )) %>
  </title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    crossorigin="anonymous" />

  <!-- App CSS -->
  <!-- <link rel="stylesheet" href="/css/app.css" /> -->
</head>

<body>
  <%- include('../partials/navbar') %>

    <main class="container container-main">
      <%- body %>
    </main>

    <!-- Example inline script ENABLED by CSP nonce -->
    <script nonce="<%= cspNonce %>">
      // Inline JS allowed because it has a valid nonce from server
      // Contoh: expose language/session flags safely
      window.APP_LANG = "<%= typeof lang !== 'undefined' ? lang : 'id' %>";
      // Hindari event handler inline (onclick). Gunakan addEventListener di sini jika perlu.
      // document.getElementById('btn').addEventListener('click', () => { ... });
    </script>

    <!-- External scripts (adding nonce is optional but allowed) -->
    <script defer nonce="<%= cspNonce %>"
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <!-- <script defer nonce="<%= cspNonce %>" src="/vendor/sweetalert2.all.min.js"></script> -->
    <!-- <script defer nonce="<%= cspNonce %>" src="/js/confirm.js"></script>
    <script defer nonce="<%= cspNonce %>" src="/js/main.js"></script> -->

    <form action="" id="formDelete">
      <input type="hidden" name="_method" value="DELETE" />
      <input type="hidden" name="bearer_token" value="<%= session?.user?.token %>" />
    </form>
    <script>
      function onDelete(event, url) {
        event.preventDefault();
        Swal.fire({
          title: " Apakah yakin ingin menghapus item ini?", showCancelButton: true,
          confirmButtonText: "Hapus", denyButtonText: `Batal`
        }).then((result) => {
          /* Read more about isConfirmed, isDenied below */
          if (result.isConfirmed) {
            // Swal.fire("Deleted!", "", "success");
            // document.getElementById('formDelete').setAttribute('action', url);
            // document.getElementById('formDelete').setAttribute('method', 'post');
            // document.getElementById('formDelete').submit();
            fetch(url, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer ' + document.querySelector('#formDelete input[name="bearer_token"]').value,
                'Accept': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
              }
            }).then(response => {
              if (response.ok) {
                Swal.fire("Terhapus!", "", "success").then(() => {
                  window.location.reload();
                });
              } else {
                Swal.fire("Gagal menghapus!", "", "error");
              }
            }).catch(error => {
              Swal.fire("Gagal menghapus!", "", "error");
            });
          } else if (result.isDenied) {
            Swal.fire("Okay tidak jadi", "", "info");
          } else {
            Swal.fire("Okay tidak jadi", "", "info");
          }
        });
      }
    </script>
</body>

</html>